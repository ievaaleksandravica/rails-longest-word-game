<div class="score">
  <h1>Result</h1>
  <% if @letters == [] %>
      <p> <%= @message1%> <b> <%= @answer.upcase %> </b>  <%= @message2 %> <%= @rand %> </p>
  <% else %>
      <p> <b> <%= @message1%></b> <%= @answer.upcase %> <%= @message2 %> </p>
  <% end %>

  <% if @found && @letters != []  %>
  <% @score = @answer.length * 10 %>
  <% else %>
  <% @score = 0 %>
  <% end %>

   <h5>Score: <%=  @score  %> </h5>
  <%= link_to 'Play again', new_path %>
</div>
