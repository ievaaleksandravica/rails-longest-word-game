<h1> New game </h1>
<ul class=" random-letters list-group list-group-horizontal">
  <% @letters.each do |letter| %>
  <li class="list-group-item"> <%= letter %> </li>
<% end %>
</ul>

<form class='my-form' action='/score' method='post' >
  <div>
    <div id="input-help" class="form-text">What is the longest word you can find?</div>
    <input type="text" class="mb-3 form-control" id="input-word" aria-describedby="input-help" name="answer">
  </div>
  <button type="submit" class="btn btn-primary">Play</button>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
